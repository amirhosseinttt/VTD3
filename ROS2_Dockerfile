# Use the official ROS 2 Humble desktop image
FROM osrf/ros:humble-desktop

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install essential tools and Python dependencies
RUN apt-get update && apt-get install -y \
    python3-pip \
    python3-rosdep \
    python3-colcon-common-extensions \
    git \
    wget \
    nano \
    && rm -rf /var/lib/apt/lists/*

# # Initialize rosdep and update
# RUN rosdep init && rosdep update

# Create a workspace directory
RUN mkdir -p /ros2_ws/src

# Set up Python environment
RUN pip3 install --upgrade pip setuptools && \
    pip3 install pytest pytest-cov flake8

# Copy your ROS 2 packages (adjust path as needed)
# COPY ./my_ros2_packages /ros2_ws/src/

# Build the workspace (example - uncomment when you add packages)
# WORKDIR /ros2_ws
# RUN source /opt/ros/humble/setup.bash && \
#     colcon build --symlink-install

# Set up entry point and default command
WORKDIR /ros2_ws
CMD ["bash"]